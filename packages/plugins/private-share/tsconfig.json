{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@tsconfig/bun/tsconfig.json",
	"compilerOptions": {
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"noUncheckedIndexedAccess": false,
		"noEmit": false,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"allowImportingTsExtensions": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext"
	},
	"include": ["src"]
}
