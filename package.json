{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "opencode-tools",
	"description": "A collection of tools to complement opencode.",
	"packageManager": "bun@1.3.5",
	"type": "module",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		],
		"catalog": {
			"@opencode-ai/sdk": "1.0.152",
			"@tsconfig/bun": "1.0.10",
			"@tsconfig/node22": "22.0.5",
			"@types/bun": "1.3.4",
			"@types/node": "22.15.1",
			"typescript": "5.9.3"
		}
	},
	"scripts": {
		"check": "bun biome check",
		"fix": "bun check --write ./",
		"typecheck": "bun turbo typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tsconfig/bun": "catalog:",
		"@types/bun": "catalog:",
		"turbo": "2.6.3",
		"typescript": "catalog:"
	}
