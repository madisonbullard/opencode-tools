{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "opencode-tools",
	"description": "A collection of tools to complement opencode.",
	"packageManager": "bun@1.3.5",
	"type": "module",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*",
			"packages/plugins/*"
		],
		"catalog": {
			"@opencode-ai/plugin": "1.0.207",
			"@opencode-ai/sdk": "1.0.207",
			"@tsconfig/bun": "1.0.10",
			"@tsconfig/node22": "22.0.5",
			"@types/bun": "1.3.5",
			"@types/node": "22.15.1",
			"typescript": "5.9.3",
			"zod": "4.2.1"
		}
	},
	"scripts": {
		"check": "bun biome check",
		"fix": "bun check --write ./",
		"prepare": "husky",
		"publish": "bun scripts/publish.ts",
		"typecheck": "bun turbo typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@tsconfig/bun": "catalog:",
		"@types/bun": "catalog:",
		"husky": "9.1.7",
		"lint-staged": "16.1.1",
		"turbo": "2.7.2",
		"typescript": "catalog:"
	}
}
